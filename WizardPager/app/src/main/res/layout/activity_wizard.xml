<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".Wizard.WizardActivity">

    <include layout="@layout/content_wizard" />

    <Button
        android:id="@+id/mButtonPrevious"
        style="@android:style/Widget.Holo.Light.ActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:layout_margin="20dp"
        android:visibility="gone"
        android:text="@string/previous" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_margin="60dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/d1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/diamond_selected"
            android:layout_marginEnd="5dp"
            android:contentDescription="@string/progress" />

        <ImageView
            android:id="@+id/d2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:contentDescription="@string/progress"
            android:src="@drawable/diamond" />

        <ImageView
            android:id="@+id/d3"
            android:layout_width="wrap_content"
            android:layout_marginEnd="5dp"
            android:contentDescription="@string/progress"
            android:layout_height="wrap_content"
            android:src="@drawable/diamond" />

        <ImageView
            android:id="@+id/d4"
            android:layout_width="wrap_content"
            android:layout_marginEnd="5dp"
            android:contentDescription="@string/progress"
            android:layout_height="wrap_content"
            android:src="@drawable/diamond" />

        <ImageView
            android:id="@+id/d5"
            android:layout_marginEnd="5dp"
            android:contentDescription="@string/progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/diamond" />

    </LinearLayout>

    <Button
        android:id="@+id/mButtonNext"
        style="@android:style/Widget.Holo.Light.ActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="20dp"
        android:text="@string/next" />

</android.support.design.widget.CoordinatorLayout>
