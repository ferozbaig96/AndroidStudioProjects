<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top|center"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/honesty"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonyes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/me_good"
            android:onClick="button_yes_clicked"
            android:padding="16dp"
            android:text="@string/ButtonYes"
            android:textSize="16sp" />

        <Button
            android:id="@+id/buttonno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/me_bad"
            android:onClick="Button_no_clicked"
            android:padding="16dp"
            android:text="@string/ButtonNo"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/myname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/tell_name"
            android:inputType="textCapWords|textPersonName"
            />
    </LinearLayout>

</LinearLayout>
